<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_linear_layout"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="horizontal">

    <fragment
        android:id="@+id/recipe_steps_fragment"
        android:name="com.projects.android.bakingapp.RecipeStepsFragment"
        android:layout_width="@dimen/right_panel_width"
        android:layout_height="match_parent" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray" />

    <fragment
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/steps_detail_fragment"
        android:name="com.projects.android.bakingapp.StepDetailFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
